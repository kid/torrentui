<%= simple_form_for @torrent, :html => { :class => 'form-horizontal' } do |f| %>
<fieldset>
  <legend><%= controller.action_name.capitalize%> Torrent</legend>
  
  <%= f.input :name %>
  <%= f.input :info_hash %>
  
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), torrents_path, :class => 'btn' %>
  </div>
</fieldset>
<% end %>
